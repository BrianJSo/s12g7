<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">

  <!-- Custom Styles -->
  <link href="/css/styles.css" rel="stylesheet">
  <link href="/css/styles-my-reservations.css" rel="stylesheet">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet">

  <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet">

  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/9d250896cd.js" crossorigin="anonymous"></script>

  <title>My Reservations</title>
  <link rel="icon" href="/static/logo.png">
</head>

<body>
  <div class="container-fluid">
    <div class="main-container row">
      {{> sidenav act=active sb=sidebarData}}

      <div class="main col-md-9 col-lg-10 ml-sm-auto p-0">
        {{> topnav}}

        <main role="main" class="pt-3 px-4">
          <div class="row px-0 col-lg-10 align-items-end mx-auto">

            <h1 class="mb-5 col-12">My reservations</h1>

            <div class="col-12 mb-5">
              <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a class="nav-link active" data-toggle="tab" href="#activeRequests">Active Requests</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#pastRequests">Past Requests</a>
                </li>
              </ul>
            </div>

            {{!-- Active --}}
            <div class="tab-content col-12">
              <div id="activeRequests" class="tab-pane active">
                <div class="row">

                  {{#each activeRes}}
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                      <div class="card equal-height">
                        <h5 class="card-header">{{title}}</h5>
                        <div class="card-body">
                          <div class="d-flex align-items-center mb-2">
                            <img class="card-icon mr-2" src="/static/icons/date.png" alt="date">
                            {{dateCreatedStr}}
                          </div> 
                          <div class="d-flex align-items-center my-2">
                            <img class="card-icon mr-2" src="/static/icons/desc.png" alt="description">
                            {{description}}
                          </div>
                          <div class="d-flex align-items-center my-2">
                            <img class="card-icon mr-2" src="/static/icons/remarks.png" alt="remarks">
                            {{remarks}}
                          </div>
                          {{#if (hasPenalty penalty)}}
                          <div class="d-flex align-items-center my-2">
                            <img class="card-icon mr-2" src="/static/icons/penalty.png" alt="penalty">
                            Penalty: Php {{penalty}}
                          </div>
                          {{/if}}
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center 
                          {{#if (status-pending status)}}
                          status-pending
                          {{else if (status-pickup-pay status)}}
                          status-pickup-pay
                          {{else if (status-pickup-pay status)}}
                          status-pickup-pay
                          {{else if (status-on-rent status)}}
                          status-on-rent
                          {{else if (status-denied status)}}
                          status-denied
                          {{else if (status-uncleared status)}}
                          status-uncleared
                          {{else}}
                          status-returned
                          {{/if}}
                          ">
                          <a class="" data-toggle="modal" href="#">Cancel</a>
                          <span class="badge badge-pill">{{status}}</span>
                          <div class="color-container"></div>
                        </div>
                      </div>
                    </div>
                  {{/each}}

                </div>
              </div>

              <!--past requests-->
              <div id="pastRequests" class="tab-pane fade">
                <div class="row">

                  {{#each pastRes}}
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                      <div class="card equal-height">
                        <h5 class="card-header">{{title}}</h5>
                        <div class="card-body">
                          <div class="d-flex align-items-center mb-2">
                            <img class="card-icon mr-2" src="/static/icons/date.png" alt="date">
                            {{dateCreatedStr}}
                          </div> 
                          <div class="d-flex align-items-center my-2">
                            <img class="card-icon mr-2" src="/static/icons/desc.png" alt="description">
                            {{description}}
                          </div>
                          <div class="d-flex align-items-center my-2">
                            <img class="card-icon mr-2" src="/static/icons/remarks.png" alt="remarks">
                            {{remarks}}
                          </div>
                          {{#if (hasPenalty penalty)}}
                          <div class="d-flex align-items-center my-2">
                            <img class="card-icon mr-2" src="/static/icons/penalty.png" alt="penalty">
                            Penalty: Php {{penalty}}
                          </div>
                          {{/if}}
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center 
                          {{#if (status-pending status)}}
                          status-pending
                          {{else if (status-pickup-pay status)}}
                          status-pickup-pay
                          {{else if (status-pickup-pay status)}}
                          status-pickup-pay
                          {{else if (status-on-rent status)}}
                          status-on-rent
                          {{else if (status-denied status)}}
                          status-denied
                          {{else if (status-uncleared status)}}
                          status-uncleared
                          {{else}}
                          status-returned
                          {{/if}}
                          ">
                          <a class="" data-toggle="modal" href="#">Cancel</a>
                          <span class="badge badge-pill">{{status}}</span>
                          <div class="color-container"></div>
                        </div>
                      </div>
                    </div>
                  {{/each}}

                </div>
              </div>
            </div>
          </div>

          <footer class="py-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">De La Salle University - Manila</p>
            <p class="mb-1">Pahiram Services</p>
          </footer>

        </main>
        <!-- do not remove -->
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/js/bootstrap.js"></script>
  <script type="text/javascript" src="/js/styles.js"></script>

</body>

</html>
