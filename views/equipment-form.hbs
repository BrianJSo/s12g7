        <main role="main" class="pt-3 px-4">

          <form class="form row col-lg-10 mx-auto px-0" action="POST">

            <h1 class="mb-5 col-12">Rent equipment</h1>

            <div class="col-lg-10 row align-items-end mx-auto">

              <div class="form-group-container col-lg-12">
                <div class="form-group form-card equipment-types pb-4">
                  <label class="form-control-placeholder col-12">Choose an equipment to borrow</label>
                  <label class="label-desc col-12">Only one equipment can be borrowed per request.</label>
                  <div class="row px-4 mx-auto">
                    <div class="col-lg-4 col-md-6 col-6 d-flex flex-column align-items-center" >
                      <div class="equipment-element" id="lan-cable"></div>
                      <button class="btn btn-toggle" id="lan-btn" data-toggle="button" aria-pressed="false" type="button">
                        LAN cable
                      </button>
                    </div>
                    <div class="col-lg-4 col-md-6 col-6 d-flex flex-column align-items-center" >
                      <div class="equipment-element" id="extension-cord"></div>
                      <button class="btn btn-toggle" id="extension-btn" data-toggle="button" aria-pressed="false" type="button">
                        Extension cord
                      </button>
                    </div>
                    <div class="col-lg-4 col-md-6 col-6 d-flex flex-column align-items-center" >
                      <div class="equipment-element" id="vga-cable"></div>
                      <button class="btn btn-toggle" id="vga-btn" data-toggle="button" aria-pressed="false" type="button">
                        VGA cable
                      </button>
                    </div>
                  </div>
                </div>
              </div>
  
              <div class="form-group-container col-lg-8">
                <div class="form-group form-card">
                  <label class="form-control-placeholder d-block" for="reason">Reason for borrowing the equipment</label>
                  <label class="label-desc d-block">(e.g. I need this for my presentation in CCAPDEV)</label>
                  <input type="text" id="reason" class="form-control" required>
                </div>
              </div>
  
              <div class="form-group-container col-lg-4">
                <div class="form-group form-card select-form">
                  <label class="d-block" for="borrow-time">Time needed</label>
                  <label class="label-desc d-block">next school day</label>
                  <select class="form-control" id="borrow-time">
                    <option>7:30am</option>
                    <option>9:15am</option>
                    <option>11:00am</option>
                    <option>12:45pm</option>
                    <option>2:30pm</option>
                    <option>4:15pm</option>
                    <option>6:00pm</option>
                  </select>
                </div>
              </div>
  
              <div class="form-group-container row col-12 mx-auto justify-content-end align-items-center">
                <div class="form-check mr-4 d-flex align-items-center">
                  <input type="checkbox" class="form-check-input my-auto" id="checkTerms" required>
                  <label class="form-check-label ml-2" for="checkTerms">
                    I agree to the <a data-toggle="modal" href="#equipmentTermsModal">Terms and Conditions</a>.
                  </label>
                </div>
                <a href="index.html" class="btn btn-outline btn-lg mr-4">Go back</a>
                <input class="btn btn-primary btn-lg" type="submit">
              </div>

