                          <div class="col-md-6 input-group mb-2">
                            <div class="form-group form-inline my-auto">
                              <input type="search" id="AEsearchBox" class="form-control" placeholder="Filter">
                            </div>
                          </div>
                          <div class="col-md-6 d-flex">
                            <nav class="ml-md-auto" aria-label="Page navigation example">
                              <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                              </ul>
                            </nav>
                          </div>
                        </div>

                        <div class="table-responsive px-0">
                          {{#if activeEquipment}}
                          <table class="table table-hover">
                            <thead class="">
                              <tr class="active">
                                <th>ID number</th>
                                <th>Date requested</th>
                                <th>Equipment</th>
                                <th>Description</th>
                                <th>Penalty</th>
                                <th>Status</th>
                                <th></th>
                              </tr>
                            </thead>
                            <tbody id="AEtable">
                              {{#each activeEquipment}}
                              <tr>
                                <td>{{userID}}</td>
                                <td>{{dateStr dateCreated}}</td>
                                <td>{{title}}</td>
                                <td>{{description}}</td>
                                <td>Php {{penalty}}</td>
                                <td>
                                  <div class="badge badge-pill
                                  {{#if (status-on-rent status)}}
                                  status-on-rent
                                  {{else}}
                                  status-uncleared
                                  {{/if}}
                                  ">
                                    {{status}}
                                  </div>
                                </td>
                                <td>
                                  <a class="table-link" data-toggle="modal" href="#editReservationModal"
                                    data-title="{{title}}" data-userid="{{userID}}"
                                    data-datecreated="{{dateStr dateCreated}}" data-status="{{status}}"
                                    data-description="{{description}}" data-remarks="{{remarks}}"
                                    data-penalty="{{penalty}}" data-type="{{reservationType}}" data-id="{{_id}}">
                                    <div class="icon" id="edit"></div>
                                  </a>
                                </td>
                              </tr>
                              {{/each}}
                            </tbody>
                          </table>
                          {{else}}
                          <div class="font-italic my-4 text-center">No active reservations</div>
                          {{/if}}
                        </div>

                      </div>

                      <div id="pastLockers" class="tab-pane fade">

                        <h5 class="mb-4">Locker rentals</h5>

                        <div class="row">
                          <div class="col-md-6 input-group mb-2">
                            <div class="form-group form-inline my-auto">
                              <input type="search" id="PLsearchBox" class="form-control" placeholder="Filter">
                            </div>
                          </div>
                          <div class="col-md-6 d-flex">
                            <nav class="ml-md-auto" aria-label="Page navigation example">
                              <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                              </ul>
                            </nav>
                          </div>
                        </div>

                        <div class="table-responsive px-0">
                          {{#if pastLockers}}
                          <table class="table table-hover">
                            <thead class="">
                              <tr class="active">
                                <th>ID number</th>
                                <th>Date requested</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th></th>
                              </tr>
                            </thead>
                            <tbody id="PLtable">
                              {{#each pastLockers}}
                              <tr>
                                <td>{{userID}}</td>
                                <td>{{dateStr dateCreated}}</td>
                                <td>{{description}}</td>
                                <td>
                                  <div class="badge badge-pill
                                  {{#if (status-denied status)}}
                                  status-denied
                                  {{else}}
                                  status-returned
                                  {{/if}}
                                  ">
                                    {{status}}
                                  </div>
                                </td>
                                <td>
                                  <a class="table-link" data-toggle="modal" href="#editReservationModal"
                                    data-title="{{title}}" data-userid="{{userID}}"
                                    data-datecreated="{{dateStr dateCreated}}" data-status="{{status}}"
                                    data-description="{{description}}" data-remarks="{{remarks}}"
                                    data-penalty="{{penalty}}" data-type="{{reservationType}}" data-id="{{_id}}">
                                    <div class="icon" id="edit"></div>
                                  </a>
                                </td>
                              </tr>
                              {{/each}}
                            </tbody>
                          </table>
                          {{else}}
                          <div class="font-italic my-4 text-center">No past reservations</div>
                          {{/if}}
                        </div>

                      </div>

                      <div id="pastEquipment" class="tab-pane fade">

                        <h5 class="mb-4">Equipment rentals</h5>

                        <div class="row">
                          <div class="col-md-6 input-group mb-2">
                            <div class="form-group form-inline my-auto">
                              <input type="search" id="PEsearchBox" class="form-control" placeholder="Filter">
                            </div>
                          </div>
                          <div class="col-md-6 d-flex">
                            <nav class="ml-md-auto" aria-label="Page navigation example">
                              <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
