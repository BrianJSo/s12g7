  <div class="modal fade" id="addEquipmentModal" tabindex="-1" role="dialog" aria-labelledby="equipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="equipmentModalLabel">Add Equipment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="form-horizontal col-lg-10 mx-auto">
            <div class="form-group form-inline input-group">
              <label for="equipment-name" class="col-lg-4 justify-content-start p-0">Name</label>
              <input type="text" class="form-control mb-2 col-lg-8" placeholder="Enter equipment name"
                id="equipment-name">
            </div>
            <div class="form-group form-inline input-group">
              <label for="equipment-ct" class="col-lg-4 justify-content-start p-0">Amount on stock</label>
              <input type="number" class="form-control mb-2 col-lg-8" placeholder="Enter number of stocks"
                id="equipment-ct">
            </div>
            <div class="form-group form-inline input-group">
              <label for="equipment-pic" class="col-lg-4 justify-content-start p-0">Image</label>
              <input type="file" class="form-control-file mb-2 col-lg-8" id="equipment-pic">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal" id="panelsubmit">Add</button>
        </div>
      </div>
    </div>
  </div>

