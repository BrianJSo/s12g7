                          </div>
                        </div>

                        <div class="table-responsive px-0">
                          {{#if pastEquipment}}
                          <table class="table table-hover">
                            <thead class="">
                              <tr class="active">
                                <th>ID number</th>
                                <th>Date reserved</th>
                                <th>Equipment</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th></th>
                              </tr>
                            </thead>
                            <tbody id="PEtable">
                              {{#each pastEquipment}}
                              <tr>
                                <td>{{userID}}</td>
                                <td>{{dateStr dateCreated}}</td>
                                <td>{{title}}</td>
                                <td>{{description}}</td>
                                <td>
                                  <div class="badge badge-pill
                                  {{#if (status-denied status)}}
                                  status-denied
                                  {{else}}
