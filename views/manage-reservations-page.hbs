                      <div class="d-flex flex-column mx-4">
                        <div class="font-weight-bold">{{userID}}</div>
                        <div>
                          {{description}}
                        </div>
                        {{#if remarks}}
                        <div>
                          Remarks: {{remarks}}
                        </div>
                        {{/if}}
                        {{#if (isLocker onItemType)}}{{#if pickupPayDate}}
