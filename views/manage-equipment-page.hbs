<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">

  <!-- Custom Styles -->
  <link href="/css/styles.css" rel="stylesheet">
  <link href="/css/styles-equipment.css" rel="stylesheet">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet">

  <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet">

  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/9d250896cd.js" crossorigin="anonymous"></script>

  <title>Manage Equipment</title>
  <link rel="icon" href="/static/logo.png">
</head>

<body>
  <div class="container-fluid">
    <div class="main-container row">
      {{> sidenav act=active sb=sidebarData}}

      <div class="main col-md-9 col-lg-10 ml-sm-auto p-0">
        {{> topnav}}

        <main role="main" class="pt-3 px-4">
          <div class="row col-lg-10 mx-auto">

            <div class="col-12 d-flex justify-content-between mb-5">
              <h1>Manage equipment</h1>
              <a id="addEquipment" data-toggle="modal" href="#addEquipmentModal"
                class="btn btn-secondary my-auto"><i class="fas fa-plus"></i> Add</a>
            </div>

            <div class="col-lg-10 row align-items-end mx-auto">
              {{#each equipmentList}}
              <div class="col-lg-4 col-6">
                <div class="card equipment-card">
                  <div class="equipment-img mx-auto" style="background-image: url(static/equipment-types/vga-cable.png)">
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <div class="card-text mb-3">
                      <div>
                        <span class="card-text-label">Stock: </span><span>{{quantity}}</span>
                      </div>
                      <div>
                        <span class="card-text-label">Available: </span><span>{{available}}</span>
                      </div>
                      <div>
                        <span class="card-text-label">On rent: </span><span>29</span>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer d-flex flex-row justify-content-between">
                    <a data-toggle="modal" href="#editEquipmentModal" data-equipmentid="{{_id}}">Edit equipment</a>
                    <span>|</span> <!--TODO: -->
                    <a data-toggle="modal" href="#delEquipmentModal" data-equipmentid="{{_id}}">
                      <i class="fas fa-trash"></i>
                    </a>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </main>
        {{> footer}}
      </div>
    </div>
  </div>

  <div class="modal fade" id="addEquipmentModal" tabindex="-1" role="dialog" aria-labelledby="equipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="equipmentModalLabel">Add Equipment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="form-horizontal col-lg-10 mx-auto" method="POST" action="/manage-equipment/equipment" id="addEquipForm">
            <div class="form-group form-inline input-group">
              <label for="equipment-name" class="col-lg-4 justify-content-start p-0">Name</label>
              <input type="text" class="form-control mb-2 col-lg-8" placeholder="Enter equipment name"
                name="name">
            </div>
            <div class="form-group form-inline input-group">
              <label for="equipment-ct" class="col-lg-4 justify-content-start p-0">Amount on stock</label>
              <input type="number" class="form-control mb-2 col-lg-8" placeholder="Enter number of stocks"
                name="count">
            </div>
            <div class="form-group form-inline input-group">
              <label for="equipment-pic" class="col-lg-4 justify-content-start p-0">Image</label>
              <input type="file" class="form-control-file mb-2 col-lg-8" name="pic">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" form="addEquipForm">Add</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="editEquipmentModal" tabindex="-1" role="dialog" aria-labelledby="equipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="equipmentModalLabel">Edit Equipment</h5> 
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="form-horizontal col-lg-10 mx-auto" method="POST" action="/manage-equipment/equipment/update" id="editEquipForm"> <!--FIXME: -->
            <input type="hidden" name="editequipmentid" id="editHiddenEquipID">
            
            <div class="form-group form-inline input-group">
              <label for="equipment-name" class="col-lg-4 justify-content-start p-0">Name</label>
              <input type="text" class="form-control mb-2 col-lg-8" placeholder="Enter equipment name"
                name="name">
            </div>
            <div class="form-group form-inline input-group">
              <label for="equipment-ct" class="col-lg-4 justify-content-start p-0">Amount on stock</label>
              <input type="number" class="form-control mb-2 col-lg-8" placeholder="Enter number of stocks"
                name="count">
            </div>
            <div class="form-group form-inline input-group">
              <label for="equipment-pic" class="col-lg-4 justify-content-start p-0">Image</label>
              <input type="file" class="form-control-file mb-2 col-lg-8" name="pic"> {{!-- TODO: --}}
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" form="editEquipForm">Save</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="delEquipmentModal" tabindex="-1" role="dialog" aria-labelledby="equipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="equipmentModalLabel">Delete Equipment</h5> 
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body col-lg-10 mx-auto">
          <form method="POST" action="/manage-equipment/equipment/delete" id="delEquipForm">
            <input type="hidden" name="equipmentid" id="hiddenEquipID">
          </form>
          <h5>Do you really want to delete this equipment?</h5> 
        </div>
        <div class="modal-footer"> 
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" form="delEquipForm">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/js/bootstrap.js"></script>
  <script type="text/javascript" src="/js/styles.js"></script>
  <script>
    $('#delEquipmentModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var equipmentID = button.data('equipmentid'); /*TODO:*/
      $('#hiddenEquipID').val(equipmentID);
    });

     $('#editEquipmentModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var equipmentID = button.data('equipmentid'); 
      $('#editHiddenEquipID').val(equipmentID);
    });
  </script>
</body>
</html>
