<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">

  <!-- Custom Styles -->
  <link href="/css/styles.css" rel="stylesheet">
  <link href="/css/styles-login.css" rel="stylesheet">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet">

  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/9d250896cd.js" crossorigin="anonymous"></script>

  <title>Register</title>
  <link rel="icon" href="/static/logo.png">
</head>

<body class="d-flex flex-column justify-content-center align-items-center">
  <div class="container-fluid">
    <div class="row">
      <div class="illustration col-md-5">
        <!-- INSERT ILLUS HERE -->
      </div>
      <div class="content col-md-7 d-flex align-items-center">
        <div class="row my-5">
          <h1 class="mx-auto mb-5">Complete your registration</h1>
          <form class="col-lg-8 mx-auto row" action="/register" method="post">
            <div class="form-group col-lg-4">
              <label for="idnum">ID Number</label>
              <input type="number" class="form-control" id="idnum" name="idNum">
            </div>
            <div class="form-group col-lg-8">
              <label for="email">Email Address</label>
              <input type="email" class="form-control" id="email" value="{{email}}" name="email" disabled>
            </div>
            <div class="form-group col-lg-12">
              <label for="college">College</label>
              <select class="form-control" id="college" name="college">
                {{#each colleges}}
                  <option value="{{@index}}">{{this}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-lg-7">
              <label for="degProg">Degree Program</label>
              <input type="text" class="form-control" id="degProg" name="degProg">
            </div>
            <div class="form-group col-lg-5 mb-5">
              <label for="phone">Mobile Number</label>
              <input type="tel" class="form-control" id="phone" name="phone">
            </div>
            <input type="submit" class="btn btn-secondary btn-round btn-lg mx-auto" value="Sign up">
          </form>
        </div>
      </div>
    </div>
  </div>
</body>

</html>